<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="138dp"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="1dp"
        android:onClick="startGame"
        android:text="Go!"
        app:layout_constraintBottom_toTopOf="@+id/gameContainer"
        app:layout_constraintEnd_toStartOf="@+id/gameContainer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gameContainer"
        app:layout_constraintTop_toBottomOf="@+id/gameContainer" />

    <LinearLayout
        android:id="@+id/gameContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="34dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:gravity="center_horizontal"
                android:text="Timer" />

            <TextView
                android:id="@+id/additionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Add these hoes" />

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Score" />
        </LinearLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/choicesGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.222">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:gravity="fill"
                android:onClick="clickSolution"
                android:tag="0"
                android:text="TextView"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:gravity="fill"
                android:onClick="clickSolution"
                android:tag="1"
                android:text="TextView"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:gravity="fill"
                android:onClick="clickSolution"
                android:tag="2"
                android:text="TextView"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:gravity="fill"
                android:onClick="clickSolution"
                android:tag="3"
                android:text="TextView"
                app:layout_column="1"
                app:layout_row="1" />
        </android.support.v7.widget.GridLayout>

        <TextView
            android:id="@+id/finalScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choicesGrid" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="startGame"
            android:text="Play Again!"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/finalScoreText" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>